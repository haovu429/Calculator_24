<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    tools:context=".MainActivity">

    <!--Giao diện ứng dụng sẽ được chia thành các dòng, cụ thể có 6 dòng-->

    <!--Dòng 1: Hiển thị dữ liệu nhập (Hảo_5h12' 15/3)-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#555555"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_Output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:inputType="number"
                android:text=""
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:typeface="monospace">

                <requestFocus />
            </EditText>
        </TableRow>
    </TableLayout>

    <!--Tách ra các Layout riêng bỏi vì khi text trong edittext tăng lên thì giao diện các nút bị vỡ (Hảo 5h16' 15/03)-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="5" >
        <!--Dòng 2: Các nút 7,8,9.: (Hảo_5h17' 15/3)-->
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/number7"
                android:text="7"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/number8"
                android:text="8"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>
            <Button
                android:id="@+id/number9"
                android:text="9"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>
            <Button
                android:id="@+id/btnDivide"
                android:text=":"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg2"
                android:textColor="@color/black"
                android:textSize="60sp"/>

        </TableRow>
        <!--Dòng 3: Các nút 4,5,6,X (Hảo_5h18' 15/3)-->
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/number4"
                android:text="4"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>

            <Button
                android:id="@+id/number5"
                android:text="5"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>
            <Button
                android:id="@+id/number6"
                android:text="6"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>
            <Button
                android:id="@+id/btnMultiply"
                android:text="x"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg2"
                android:textColor="@color/black"
                android:textSize="40sp"/>

        </TableRow>
        <!--Dòng 4: Các nút 1,2,3,- (Phương_7h03' 15/3)-->
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/number1"
                android:text="1"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>

            <Button
                android:id="@+id/number2"
                android:text="2"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>
            <Button
                android:id="@+id/number3"
                android:text="3"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_border_bg2"
                android:text="-"
                android:typeface="monospace"
                android:textColor="@color/black"
                android:textSize="60sp" />

        </TableRow>
        <!--Dòng 5: Các nút 0,.,+ (Phương_7h20' 15/3)-->
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <!--De chia ti le nut 0 gap 2 lan nut thuong, ta dat thuoc tinh
            weight cho nut 0 la 2 và trong so cho nut . và + la 1
            LUU Y phai dat width cua cac nut la 0dp vi khi chia trong so se bi anh huong
            boi do dai phan text trong cac nut (Phương 7h21' 15/03)-->
            <Button
                android:id="@+id/number0"
                android:text="0"
                android:typeface="monospace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>

            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:typeface="monospace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border_bg"
                android:textColor="@color/black"
                android:textSize="60sp"/>

            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:typeface="monospace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border_bg2"
                android:textColor="@color/black"
                android:textSize="45sp"/>

        </TableRow>
        <!--Dòng 6: Các nút C,= (Phương_7h25' 15/3)-->
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btnClear"
                android:text="C"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg2"
                android:textColor="@color/black"
                android:textSize="60sp"/>

            <Button
                android:id="@+id/btnEqual"
                android:text="="
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_border_bg2"
                android:textColor="@color/black"
                android:textSize="60sp"/>

        </TableRow>

    </TableLayout>

</TableLayout>